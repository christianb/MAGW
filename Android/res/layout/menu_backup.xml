<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <!-- Layout just for Margin left and right -->
    <RelativeLayout 
        android:id="@+id/menu_margin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip">
        
        <!-- Headline -->
        <RelativeLayout
        android:id="@+id/menu_headline_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="55dip"
		android:orientation="vertical">
		
	        <TextView
	            android:id="@+id/menu_headline"
	            android:text="aktion wählen"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/Headline"
	            android:textColor="@color/text_hadline"
	        />
	        
		</RelativeLayout> <!-- End of Headline Layout -->
    
    	<!-- Image -->
	    <RelativeLayout
	        android:id="@+id/menu_image_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="150dip"
			android:layout_marginTop="100dip"
			android:orientation="vertical">
	        
	        <ImageView 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:src="@drawable/menu_header"/>
	        
	        <RelativeLayout 
	            android:id="@+id/menu_image_text"
	            android:layout_width="fill_parent"
	            android:layout_height="100dip"
	            android:background="@color/blue_medium_semi_transparent"
	            android:layout_marginTop="90dip">
	        
	            <TextView
		            android:id="@+id/menu_headline_1"
		            android:text="ein klick und los"
		            android:textColor="@color/text" 
		            android:layout_marginBottom="-12dip"
		            android:layout_marginRight="10dip"
		            android:layout_marginTop="4dip"
		            android:layout_alignParentRight="true"
		            android:textSize="20dip"
		            
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            />
	            
	            <TextView
		            android:id="@+id/menu_headline_2"
		            android:text="wählen sie eine option"
		            android:textColor="@color/text" 
		            android:layout_marginBottom="-12dip"
		            android:layout_marginRight="10dip"
		            android:layout_marginTop="2dip"
		            android:layout_alignParentRight="true"
		            android:textSize="25dip"
		            android:layout_below="@id/menu_headline_1"
		            
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            />
	            
	        </RelativeLayout>
	        
		</RelativeLayout> <!-- End of Image Layout -->
    
		<!-- Buttons -->
	    <RelativeLayout
	        android:id="@+id/menu_buttons"
	        android:layout_below="@id/menu_image_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
			android:orientation="vertical"
			android:background="@color/white">
	        
	        <RelativeLayout
	            android:id="@+id/menu_button_1"
	            android:layout_width="fill_parent"
	            android:layout_height="50dip"
				android:layout_marginTop="5dip"
				android:orientation="vertical"
				android:background="@color/red_bright">
				
	            <!-- Wrap the text on the buttons -->
	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_marginLeft="10dip">
	            	<TextView 
	                	android:id="@+id/menu_button_1_text_1"
	                	android:layout_width="fill_parent"
	                	android:layout_height="20dip"
		                android:text="patient einlesen"
		                android:layout_marginTop="10dip"/>
		            <TextView 
		                android:id="@+id/menu_button_1_text_2"
		                android:layout_width="fill_parent"
		                android:layout_height="20dip"
		                android:text="patient wählen und daten erfassen"
		                android:layout_below="@id/menu_button_1_text_1"/>
	            </RelativeLayout>
	        </RelativeLayout>
	        
	       	<RelativeLayout
	            android:id="@+id/menu_button_2"
	            android:layout_width="fill_parent"
	            android:layout_height="50dip"
	            android:layout_below="@id/menu_button_1"
				android:layout_marginTop="5dip"
				android:orientation="vertical"
				android:background="@color/red_bright">
	            
	       	    <!-- Wrap the text on the buttons -->
	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_marginLeft="10dip">
	            	<TextView 
	                	android:id="@+id/menu_button_2_text_1"
	                	android:layout_width="fill_parent"
	                	android:layout_height="20dip"
		                android:text="Impressum"
		                android:layout_marginTop="10dip"/>
		            <TextView 
		                android:id="@+id/menu_button_2_text_2"
		                android:layout_width="fill_parent"
		                android:layout_height="20dip"
		                android:text="legal information anzeigen"
		                android:layout_below="@id/menu_button_1_text_1"/>
	            </RelativeLayout>
	        </RelativeLayout>
	        
	       	<RelativeLayout
	            android:id="@+id/menu_button_3"
	            android:layout_width="fill_parent"
	            android:layout_height="50dip"
	            android:layout_below="@id/menu_button_2"
				android:layout_marginTop="5dip"
				android:orientation="vertical"
				android:background="@color/red_bright">
	            
	       	    <!-- Wrap the text on the buttons -->
	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_marginLeft="10dip">
	            	<TextView 
	                	android:id="@+id/menu_button_3_text_1"
	                	android:layout_width="fill_parent"
	                	android:layout_height="20dip"
		                android:text="..."
		                android:layout_marginTop="10dip"/>
		            <TextView 
		                android:id="@+id/menu_button_3_text_2"
		                android:layout_width="fill_parent"
		                android:layout_height="20dip"
		                android:text="..."
		                android:layout_below="@id/menu_button_1_text_1"/>
	            </RelativeLayout>
	        </RelativeLayout>
	        
	     </RelativeLayout> <!-- End of Buttons -->
        
    </RelativeLayout> <!-- End of Margin Layout -->
    
    

</RelativeLayout>