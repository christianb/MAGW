<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:layout_marginTop="120dip"
		android:orientation="vertical"
		>
		
        <TextView
            android:id="@+id/login_headline"
            android:text="willkommen"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Headline"
            />
	</RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/login_info"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:layout_marginTop="150dip"
		android:orientation="vertical"
		android:background="@color/blue">
	</RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/login_content"
        android:layout_below="@id/login_info"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:layout_marginTop="5dip"
		android:orientation="vertical"
		android:background="@color/red_bright">
		
        <TextView
            android:id="@+id/login_username_info"
            android:text="bitte geben sie ihren benutzernamen ein"
            android:textColor="@color/black" 
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText 
            android:id="@+id/login_username_edit"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_below="@id/login_username_info"
            android:background="@color/red_dark"/>
        <TextView
            android:id="@+id/login_password_info"
            android:text="bitte geben sie ihr passwort ein"
            android:textColor="@color/black" 
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_username_edit"
            />
        <EditText 
            android:id="@+id/login_password_edit"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_below="@id/login_password_info"
            android:background="@color/red_dark"/>
        
      	<Button 
      	    android:id="@+id/login_button"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:text="Login"
      	    android:layout_below="@id/login_password_edit"/>
        
     </RelativeLayout>

</RelativeLayout>